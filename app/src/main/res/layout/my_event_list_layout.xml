<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true">

    <TextView
        android:id="@+id/listEventName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/listEventType"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/listEventType"
        android:text="TextView"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listEventType"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listEventName"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/listLocation"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listEventType"
        android:text="TextView" />

    <TextView
        android:id="@+id/listTime"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/listLocation"
        android:text="TextView" />

    <TextView
        android:id="@+id/listDate"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listTime"
        android:text="TextView" />

    <TextView
        android:id="@+id/listCapacity"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/listDate"
        android:text="TextView" />



    <Button
        android:id="@+id/quitEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="#F44336"
        android:focusable="false"
        android:text="quit" />

<!--    </RelativeLayout>-->
</RelativeLayout>